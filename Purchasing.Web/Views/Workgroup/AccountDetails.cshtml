@model Purchasing.Core.Domain.WorkgroupAccount

@{
    ViewBag.Title = "Account Details";
}

@section SubNav
{
	<ul class="navigation">
			<li>@Html.ActionLink("Edit", "EditAccount", new { id = Model.Workgroup.Id, accountid = Model.Id }) </li>
			<li>@Html.ActionLink("Back to List", "Accounts", new {id=Model.Workgroup.Id})</li>
		</ul>
}

<section class="display-form ui-corner-all">
    <header class="ui-corner-top ui-widget-header">Account: @Model.Account.Name (@Model.Account.Id)</header>
	<ul>
        <li>
            <div class="display-label">@Html.LabelFor(x => x.Approver)</div>
            <div class="display-details">@(Model.Approver != null ? Model.Approver.FullName : "n/a")</div>
        </li>
        <li>
            <div class="display-label">@Html.LabelFor(x => x.AccountManager)</div>
            <div class="display-details">@(Model.AccountManager != null ? Model.AccountManager.FullName : "n/a")</div>
        </li>
        <li>
            <div class="display-label">@Html.LabelFor(x => x.Purchaser)</div>
            <div class=display-details>@(Model.Purchaser != null ? Model.Purchaser.FullName : "n/a")</div>
        </li>
	</ul>

	<footer class="ui-corner-bottom"></footer>

</section>


