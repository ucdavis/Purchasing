@using Purchasing.Core.Domain
@model OrderReRoutePurchaserModel


@{
    ViewBag.Title = "Reroute Account Manager";
    ViewBag.HideEditDialogue = true;
}
@{
    Bundles.Reference("Css/single/chosen.css");    
    Bundles.Reference("scripts/public/single/chosen.jquery.js");
}

@section AdditionalScripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $(".chzn-select").chosen({ no_results_text: "No results matched", search_contains: true });
        });
    </script>
}

@section SubNav
{
    <ul class="navigation">
        <li><a href="@Url.Action("Review", new {id=Model.OrderId})" class="ui-button button ui-state-default">Back to Order</a></li>
    </ul>
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.Hidden("id", Model.OrderId)
    @Html.Hidden("approvalId", Model.ApprovalId)
    <section class="ui-corner-all display-form">

    <header class="ui-corner-top ui-widget-header">Choose Available Account Manager for Order # @Model.Order.RequestNumber</header>
    
        <ul>
            <li>
                <div class="editor-label required">
                    <label>Account Manager to Reroute to:</label><span>*</span>
                </div>
                <div class="editor-field">                                      
                    @this.Select("AccountManagerId").Options(Model.PurchaserPeeps, x => x.Id, x => x.FullName).Selected("--Select Account Manager--").Class("chzn-select")                    
                </div>
            </li>
            <li>				
				<div class="editor-label">&nbsp;</div>
				<div class="editor-field">
				<input class="button" type="submit" value="Save" /> | <a href="@Url.Action("Review", new {id=Model.OrderId})" >Cancel</a>
				</div>
			</li>
        </ul>
    </section>
}





