            IsEvalIgnored="false"
            />

        <!-- Compress Print CSS -->
        <CompressorTask
            CssFiles="@(CssPrintFiles)"
            DeleteCssFiles="false"
            CssOutputFile="$(CssPrintOutputFile)"
            CssCompressionType="YuiStockCompression"
            JavaScriptFiles=""
            ObfuscateJavaScript="True"
